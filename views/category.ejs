<!DOCTYPE html>
<html lang="en">

<head>
  <title>Task Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>

  <script src="https://kit.fontawesome.com/7d828f8d7a.js" crossorigin="anonymous"></script>

</head>

<%- include('partials/_header') %>

<nav class="nav-area">
    <a class="home" href="/">Home</a>
    <a class="eat" href="/tasks/1">Eat</a>
    <a class="watch" href="/tasks/2">Watch</a>
    <a class="read" href="/tasks/3">Read</a>
    <a class="buy" href="/tasks/4">Buy</a>
    <a class="do" href="/tasks/5">Do</a>
    <a class="other" href="/tasks/6">Other</a>
</nav>

<main>
  <table class="table">
    <caption><%= categoryName %></caption>
    <thead>
      <tr>
        <th scope="col">Task</th>
        <th scope="col">Date Added</th>
        <th scope="col">Delete</th>
        <th scope="col">Edit</th>
        <th scope="col">Completed</th>
      </tr>
    </thead>
    <tbody>
      <% for (let id in tasks) { %>
        <tr>
          <td><%= tasks[id].name %></td>
          <td><%= tasks[id].date.toDateString() %></td>
          <td><form method="POST" action="/tasks/<%= tasks[id].c_id %>/<%= tasks[id].t_id %>/delete">
            <button type="submit">Delete</button>
          </form>
          </td>
          <td>
            <button type="submit"><a href="/tasks/edit/<%= tasks[id].c_id %>/<%= tasks[id].t_id %>">Edit</a></button>
          </td>
          <td>
            <%= tasks[id].completed %>
          </td>
        </tr>
      <% } %>
    </tbody>


  </table>
</main>

</html>
